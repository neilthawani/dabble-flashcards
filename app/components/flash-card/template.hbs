<div class="flash-card-outer" {{action "toggleShowTranslation"}}>
  <div class="flash-card-inner-icon">
    <i class="ii ii-rotate-3d"></i>
  </div>

  <div class="flash-card-inner-text">
    {{#if isConversation}}
      {{flash-card/conversation
          item = item
          showTranslation = showTranslation}}
    {{else}}
      {{displayWord}}
    {{/if}}

    <div class="flash-card-inner-audio">
      {{#if showTranslation}}
        <audio controls>
          <source src={{item.url}} type="audio/mpeg">
          Your browser does not support the audio element.
        </audio>
      {{/if}}
    </div>
  </div>
</div>
